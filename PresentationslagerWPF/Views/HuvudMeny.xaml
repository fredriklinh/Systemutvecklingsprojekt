<UserControl x:Class="PresentationslagerWPF.Views.HuvudMeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationslagerWPF.Views"
        xmlns:vm="PresentationslagerWPF.ViewModels"
        mc:Ignorable="d"
        >

    <DockPanel LastChildFill="True" Margin="20,20,20,20">
        <StackPanel Margin="0,0,0,0">
            <Label Margin="10,5,10,20" FontSize="30" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray">Huvudmeny</Label>
            <Button x:Name="btnBokning" Command="{Binding NavigateMasterBokningCommand}" CommandParameter ="Hej" Content="Bokning" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,5,10,20" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
            <Button x:Name="btnUthyrning" Content="Uthyrning/Skidshop" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,5,10,20" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
            <Button x:Name="btnKundhantering" Command ="{Binding NavigateKundHanteringCommand}" Content="Kundhantering" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,5,10,20" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
            <Separator/>
            <Button x:Name="btnStatistik" Content="Statistik" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,20,10,20" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
            <Button x:Name="btnAdmin" Content="Admin" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,5,10,20" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
            <Separator/>
            <Button x:Name="btnAvsluta" Command = "{Binding ExitCommand}" Content="Avsluta" HorizontalAlignment="Left" Width="250" Height="30" Margin="10,20,10,0" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Calibri" FontWeight="DemiBold" Foreground="DarkSlateGray"></Button>
        </StackPanel>
        <StackPanel Margin="20,20,20,20" Background="Gray"></StackPanel>
    </DockPanel>


</UserControl>