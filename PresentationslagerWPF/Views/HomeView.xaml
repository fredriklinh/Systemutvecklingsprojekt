<UserControl x:Class="PresentationslagerWPF.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationslagerWPF.Views" 
        mc:Ignorable="d"
        Height="450" Width="800">

    <StackPanel Margin="20,20,20,20">

        <Label>Användarnamn</Label>
        <TextBox Text="{Binding Användarnamn, Mode=OneWayToSource}" ></TextBox>
        <Label>Lösenord</Label>
        <TextBox Text="{Binding Lösenord, Mode=OneWayToSource}"></TextBox>
        <Button>AVBRYT</Button>
        <ToggleButton x:Name="btnLogin" Content="LOGGA IN"  FontSize="14" Width="100" Margin="10,5,10,5" Command="{Binding InloggCommand}" Height="27"/>
        <StatusBar DockPanel.Dock="Bottom" Background="Beige" Margin="10,10,10,10">
            <StatusBarItem HorizontalAlignment="Center">
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </StackPanel>
</UserControl>
